<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--ProductService-->
    <bean id="productService" class="com.nintendont.smyths.services.ProductService"/>

    <!--Repositories-->
    <bean id="productRepo" class="com.nintendont.smyths.repository.SmythsProductRepository"/>
    <bean id="categoryRepo" class="com.nintendont.smyths.repository.SmythsCategoryRepository"/>

    <!--RestControllers-->
    <bean id="productController" class="com.nintendont.smyths.hello.HelloController"/>

    <!--Applications-->
    <bean id="application" class="com.nintendont.smyths.app.SmythsApp"/>



</beans>